<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yodpook.android.activities.AddSavingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/money_amount"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/visa_image"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:background="@drawable/visa_img" />

            <ImageView
                android:id="@+id/rabbit_image"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:background="@drawable/rabbit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/paypal_image"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:background="@drawable/paypal" />

            <ImageView
                android:id="@+id/mastercard_image"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:background="@drawable/mastercard" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:text="More"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/dividerText" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_done" />

</RelativeLayout>
