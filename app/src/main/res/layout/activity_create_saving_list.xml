<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.yodpook.android.activities.CreateSavingListActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Saving Target"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/car_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/create_saving_list_image_size"
                    android:layout_height="@dimen/create_saving_list_image_size"
                    android:background="@drawable/ic_car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Car" />

                <FrameLayout
                    android:id="@+id/car_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorAccent"
                    android:visibility="invisible">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/create_saving_list_image_size"
                    android:layout_height="@dimen/create_saving_list_image_size"
                    android:background="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="House" />

                <FrameLayout
                    android:id="@+id/house_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorAccent"
                    android:visibility="invisible">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/condo_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/create_saving_list_image_size"
                    android:layout_height="@dimen/create_saving_list_image_size"
                    android:background="@drawable/ic_condo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Condo" />

                <FrameLayout
                    android:id="@+id/condo_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorAccent"
                    android:visibility="invisible">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/land_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/create_saving_list_image_size"
                    android:layout_height="@dimen/create_saving_list_image_size"
                    android:background="@drawable/ic_fence" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Land" />

                <FrameLayout
                    android:id="@+id/land_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorAccent"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerText">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/select_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/create_saving_list_image_size"
                android:layout_height="@dimen/create_saving_list_image_size"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/ic_coin" />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginStart="120dp"
                android:text="Select Price"
                android:textStyle="bold" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerText">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/select_deadline_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/create_saving_list_image_size"
                android:layout_height="@dimen/create_saving_list_image_size"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:id="@+id/deadline_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginStart="120dp"
                android:text="Select Deadline"
                android:textStyle="bold" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerText">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/select_members_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/create_saving_list_image_size"
                android:layout_height="@dimen/create_saving_list_image_size"
                android:layout_margin="16dp"
                android:background="@drawable/ic_group" />

            <TextView
                android:id="@+id/member_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginStart="120dp"
                android:text="Select Saving members"
                android:textStyle="bold" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerText">

        </FrameLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_done" />

</RelativeLayout>